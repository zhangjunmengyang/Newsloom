                        {% endif %}
                        {% if item.tags %}
                        <span class="dot-sep"></span>
                        {% for tag in item.tags %}
                        <span class="tag-chip">{{ tag }}</span>
                        {% endfor %}
                        {% endif %}
                    </div>

                    {% if item.detail %}
                    <div class="brief-body">{{ item.detail | md_inline }}</div>
                    {% endif %}

                    <div class="brief-foot">
                        <a href="{{ item.url|default('#') }}" class="read-link" target="_blank">Read more ‚Üí</a>
