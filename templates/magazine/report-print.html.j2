<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <title>Newsloom Intelligence Brief ‚Äî {{ date_str }}</title>
    <style>
        /* ============================================================
         * Newsloom Magazine Print Template
         * ÊùÇÂøóÈ£éÊ†º PDF ‰∏ìÁî®Ê®°Êùø - ‰∫ÆËâ≤ + È´òÁ´ØÊéíÁâà
         * ============================================================ */

        @page {
            size: A4;
            margin: 1.5cm 2cm;
            @bottom-center {
                content: "Newsloom Daily Intelligence ‚Äî " "{{ date_str }}" " ‚Äî Page " counter(page);
                font-size: 9pt;
                color: #94a3b8;
                font-family: var(--font);
                padding-top: 8px;
                border-top: 1px solid #e2e8f0;
            }
        }

        /* Cover page - no footer */
        @page :first {
            @bottom-center { content: none; }
        }

        :root {
            --bg: #ffffff;
            --text-primary: #0f172a;
            --text-secondary: #475569;
            --text-muted: #94a3b8;
            --border: #e2e8f0;
            --border-strong: #cbd5e1;
            --accent: #6366f1;
            --accent-light: #e0e7ff;
            --red: #dc2626;
            --red-bg: #fef2f2;
            --yellow: #f59e0b;
            --yellow-bg: #fffbeb;
            --green: #16a34a;
            --green-bg: #f0fdf4;
            --font: -apple-system, BlinkMacSystemFont, "PingFang SC", "Noto Sans CJK SC", "Microsoft YaHei", "SF Pro Text", "Helvetica Neue", sans-serif;
            --font-serif: "Iowan Old Style", "Georgia", "Songti SC", "STSong", serif;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: var(--font);
            background: var(--bg);
            color: var(--text-primary);
            line-height: 1.6;
            font-size: 10pt;
            -webkit-font-smoothing: antialiased;
        }

        /* ===== Cover Page ===== */
        .cover-page {
            page-break-after: always;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            height: 24cm;
            padding: 3cm;
            background: linear-gradient(135deg, #f8fafc 0%, var(--accent-light) 100%);
        }

        .cover-logo {
            font-size: 48pt;
            margin-bottom: 16pt;
        }

        .cover-title {
            font-family: var(--font-serif);
            font-size: 32pt;
            font-weight: 700;
            color: var(--text-primary);
            letter-spacing: -0.02em;
            margin-bottom: 8pt;
        }

        .cover-subtitle {
            font-size: 14pt;
            color: var(--text-secondary);
            margin-bottom: 32pt;
            font-weight: 400;
        }

        .cover-date {
            font-size: 16pt;
            color: var(--accent);
            font-weight: 600;
            margin-bottom: 48pt;
            padding: 12pt 24pt;
            border: 2pt solid var(--accent);
            border-radius: 8pt;
            display: inline-block;
        }

        .cover-stats {
            display: flex;
            justify-content: center;
            gap: 32pt;
            margin-top: auto;
        }

        .cover-stat {
            text-align: center;
        }

        .cover-stat-value {
            font-size: 28pt;
            font-weight: 700;
            color: var(--accent);
            line-height: 1;
        }

        .cover-stat-label {
            font-size: 10pt;
            color: var(--text-muted);
            margin-top: 4pt;
        }

        /* ===== Executive Summary ===== */
        .exec-summary {
            page-break-after: always;
            page-break-inside: avoid;
            padding: 24pt 0;
        }

        .exec-summary-header {
            margin-bottom: 20pt;
            padding-bottom: 12pt;
            border-bottom: 3pt solid var(--yellow);
        }

        .exec-summary-header h1 {
            font-size: 24pt;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 6pt;
        }

        .exec-summary-header .subtitle {
            font-size: 11pt;
            color: var(--text-muted);
        }

        .exec-summary-content {
            background: var(--yellow-bg);
            border-left: 4pt solid var(--yellow);
            padding: 16pt;
            border-radius: 6pt;
        }

        .exec-summary-content p,
        .exec-summary-content li {
            font-size: 11pt;
            line-height: 1.7;
            color: var(--text-primary);
            margin-bottom: 8pt;
        }

        .exec-summary-content ul {
            margin-left: 16pt;
        }

        /* ===== Table of Contents ===== */
        .toc {
            page-break-after: always;
            page-break-inside: avoid;
            padding: 24pt 0;
        }

        .toc-header {
            margin-bottom: 20pt;
            padding-bottom: 12pt;
            border-bottom: 3pt solid var(--accent);
        }

        .toc-header h1 {
            font-size: 24pt;
            font-weight: 700;
            color: var(--text-primary);
        }

        .toc-list {
            list-style: none;
        }

        .toc-item {
            display: flex;
            align-items: center;
            padding: 10pt 0;
            border-bottom: 1pt solid var(--border);
        }

        .toc-emoji {
            font-size: 16pt;
            margin-right: 12pt;
            width: 32pt;
            text-align: center;
        }

        .toc-title {
            flex: 1;
            font-size: 12pt;
            font-weight: 600;
            color: var(--text-primary);
        }

        .toc-count {
            font-size: 10pt;
            color: var(--text-muted);
            margin-right: 8pt;
        }

        .toc-must-read {
            font-size: 10pt;
            color: var(--red);
            font-weight: 600;
        }

        /* ===== Sections ===== */
        .section {
            page-break-before: always;
            page-break-inside: auto;
            padding: 12pt 0;
        }

        .section:first-of-type {
            page-break-before: auto;
        }

        .section-header {
            margin-bottom: 20pt;
            padding-bottom: 12pt;
            border-bottom: 2pt solid var(--border-strong);
            display: flex;
            align-items: center;
            gap: 12pt;
        }

        .section-emoji {
            font-size: 20pt;
        }

        .section-title {
            font-size: 20pt;
            font-weight: 700;
            color: var(--text-primary);
            flex: 1;
        }

        .section-count {
            font-size: 10pt;
            color: var(--text-muted);
            background: var(--border);
            padding: 4pt 10pt;
            border-radius: 4pt;
        }

        /* ===== Cards ===== */
        .card {
            page-break-inside: avoid;
            margin-bottom: 14pt;
            border: 1pt solid var(--border);
            border-radius: 6pt;
            overflow: hidden;
            display: flex;
            background: var(--bg);
        }

        .card-priority {
            min-width: 8pt;
            background: var(--green-bg);
        }

        .card-priority.must-read {
            background: var(--red);
        }

        .card-priority.recommended {
            background: var(--yellow);
        }

        .card-priority.fyi {
            background: var(--green);
        }

        .card-content {
            flex: 1;
            padding: 12pt;
        }

        .card-header {
            display: flex;
            align-items: flex-start;
            gap: 8pt;
            margin-bottom: 8pt;
        }

        .card-priority-icon {
            font-size: 14pt;
            line-height: 1;
        }

        .card-headline {
            flex: 1;
            font-size: 11.5pt;
            font-weight: 600;
            color: var(--text-primary);
            line-height: 1.4;
        }

        .card-meta {
            display: flex;
            align-items: center;
            gap: 8pt;
            margin-bottom: 8pt;
            flex-wrap: wrap;
        }

        .card-source {
            font-size: 9pt;
            color: var(--text-secondary);
            background: var(--border);
            padding: 2pt 8pt;
            border-radius: 3pt;
            font-weight: 500;
        }

        .card-tag {
            font-size: 8.5pt;
            color: var(--accent);
            background: var(--accent-light);
            padding: 2pt 6pt;
            border-radius: 3pt;
        }

        .card-detail {
            font-size: 10pt;
            color: var(--text-secondary);
            line-height: 1.6;
            margin-bottom: 6pt;
        }

        .card-url {
            font-size: 8.5pt;
            color: var(--text-muted);
            font-family: monospace;
            word-break: break-all;
        }

        /* ===== Utilities ===== */
        .page-break {
            page-break-after: always;
        }

        .no-break {
            page-break-inside: avoid;
        }

        /* Links - show as text for PDF */
        a {
            color: inherit;
            text-decoration: none;
        }

        /* Print optimization */
        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }
    </style>
</head>
<body>

    <!-- Cover Page -->
    <div class="cover-page">
        <div class="cover-logo">üì∞</div>
        <h1 class="cover-title">Newsloom Intelligence Brief</h1>
        <p class="cover-subtitle">Daily Technology & Business Intelligence Report</p>
        <div class="cover-date">{{ date_str }}</div>

        <div class="cover-stats">
            <div class="cover-stat">
                <div class="cover-stat-value">{{ total_items }}</div>
                <div class="cover-stat-label">Á≤æÈÄâÁÆÄÊä•</div>
            </div>
            <div class="cover-stat">
                <div class="cover-stat-value">{{ briefs|length }}</div>
                <div class="cover-stat-label">Ë°å‰∏öÊùøÂùó</div>
            </div>
            {% set must_read_total = [] %}
            {% for section_key, items in briefs.items() %}
            {% for item in items %}
            {% if item.priority == 'üî¥' %}
            {% if must_read_total.append(1) %}{% endif %}
            {% endif %}
            {% endfor %}
            {% endfor %}
            <div class="cover-stat">
                <div class="cover-stat-value">{{ must_read_total|length }}</div>
                <div class="cover-stat-label">ÂøÖËØªË¶ÅÈóª</div>
            </div>
        </div>
    </div>

    <!-- Executive Summary -->
    {% if executive_summary %}
    <div class="exec-summary">
        <div class="exec-summary-header">
            <h1>üìå Executive Summary</h1>
            <p class="subtitle">‰ªäÊó•Ê†∏ÂøÉÊÉÖÊä•ÊëòË¶Å</p>
        </div>
        <div class="exec-summary-content">
            {% for line in executive_summary.strip().split('\n') %}
            {% if line.strip() %}
            <p>{{ line }}</p>
            {% endif %}
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Table of Contents -->
    <div class="toc">
        <div class="toc-header">
            <h1>üìë Table of Contents</h1>
        </div>
        <ul class="toc-list">
            {% for section_key in section_order %}
            {% if section_key in briefs and briefs[section_key]|length > 0 %}
            {% set meta = section_configs[section_key] %}
            {% set items = briefs[section_key] %}
            {% set must_read_count = items|selectattr('priority', 'equalto', 'üî¥')|list|length %}
            <li class="toc-item">
                <span class="toc-emoji">{{ meta.emoji }}</span>
                <span class="toc-title">{{ meta.title }}</span>
                <span class="toc-count">{{ items|length }} Êù°</span>
                {% if must_read_count > 0 %}
                <span class="toc-must-read">{{ must_read_count }}üî¥</span>
                {% endif %}
            </li>
            {% endif %}
            {% endfor %}
        </ul>
    </div>

    <!-- Sections -->
    {% for section_key in section_order %}
    {% if section_key in briefs and briefs[section_key]|length > 0 %}
    {% set meta = section_configs[section_key] %}
    {% set items = briefs[section_key] %}
    <section class="section">
        <div class="section-header">
            <span class="section-emoji">{{ meta.emoji }}</span>
            <h2 class="section-title">{{ meta.title }}</h2>
            <span class="section-count">{{ items|length }} Êù°</span>
        </div>

        {% for item in items %}
        {% set priority = item.priority|default('üü¢') %}
        {% set priority_class = 'must-read' if priority == 'üî¥' else ('recommended' if priority == 'üü°' else 'fyi') %}
        <div class="card">
            <div class="card-priority {{ priority_class }}"></div>
            <div class="card-content">
                <div class="card-header">
                    <span class="card-priority-icon">{{ priority }}</span>
                    <h3 class="card-headline">{{ item.headline|default(item.title|default('No title')) }}</h3>
                </div>

                <div class="card-meta">
                    {% if item.source %}
                    <span class="card-source">{{ item.source }}</span>
                    {% endif %}
                    {% if item.tags %}
                    {% for tag in item.tags %}
                    <span class="card-tag">{{ tag }}</span>
                    {% endfor %}
                    {% endif %}
                </div>

                {% if item.detail %}
                <p class="card-detail">{{ item.detail|default(item.text|default('')) }}</p>
                {% endif %}

                {% if item.url %}
                <p class="card-url">üîó {{ item.url }}</p>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </section>
    {% endif %}
    {% endfor %}

</body>
</html>
