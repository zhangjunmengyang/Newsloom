    .header-title { font-size: 1.6em; }
    .pwc-header { padding: 32px 16px 28px; }
    .content-body { padding: 20px 14px 24px; }
    .exec-summary { padding: 24px 18px 20px; }
    .exec-summary::after { display: none; }
}
</style>
</head>
<body>
<div class="report-wrap">

    <!-- ====== HEADER: Full-width orange band + triangle decorations ====== -->
    <header class="pwc-header">
        <div class="header-tri-cluster"></div>
        <div class="header-eyebrow">Confidential Â· Strategy& Intelligence</div>
        <h1 class="header-title"><b>STRATEGY&</b> INTELLIGENCE</h1>
        <div class="header-subtitle">Strategic intelligence for decisive leadership</div>
        <div class="header-date-line">{{ date_str }} Â· Prepared for Executive Review</div>
    </header>

    <!-- Arrow accent -->
    <div class="header-arrow"><div class="header-arrow-inner"></div></div>

    <!-- ====== CONTENT BODY ====== -->
    <div class="content-body">

        <!-- â”€â”€ KEY METRICS: Bar chart style â”€â”€ -->
        {%- set ns = namespace(critical=0, high=0) -%}
        {%- for section_key, items in briefs.items() -%}
            {%- if items is iterable and items is not string -%}
                {%- for item in items -%}
                    {%- if item.priority == 'ðŸ”´' -%}
                        {%- set ns.critical = ns.critical + 1 -%}
                    {%- elif item.priority == 'ðŸŸ¡' -%}
                        {%- set ns.high = ns.high + 1 -%}
                    {%- endif -%}
                {%- endfor -%}
            {%- endif -%}
        {%- endfor -%}

        <div class="metrics-strip">
            <div class="metric-cell">
                <div class="metric-number">{{ total_items }}</div>
                <div class="metric-caption">Total Insights</div>
                <div class="metric-mini-bar">
                    <div class="metric-mini-fill" style="width: 100%;"></div>
                </div>
            </div>
            <div class="metric-cell">
                <div class="metric-number is-accent">{{ ns.critical }}</div>
                <div class="metric-caption">Critical</div>
                <div class="metric-mini-bar">
                    <div class="metric-mini-fill" style="width: {% if total_items > 0 %}{{ (ns.critical * 100 / total_items)|round|int }}{% else %}0{% endif %}%;"></div>
                </div>
            </div>
            <div class="metric-cell">
                <div class="metric-number">{{ ns.high }}</div>
                <div class="metric-caption">High Priority</div>
                <div class="metric-mini-bar">
                    <div class="metric-mini-fill" style="width: {% if total_items > 0 %}{{ (ns.high * 100 / total_items)|round|int }}{% else %}0{% endif %}%;"></div>
                </div>
            </div>
            <div class="metric-cell">
                <div class="metric-number">{{ briefs|length }}</div>
                <div class="metric-caption">Sectors</div>
                <div class="metric-mini-bar">
                    <div class="metric-mini-fill" style="width: 60%;"></div>
                </div>
            </div>
        </div>

        <!-- â”€â”€ EXECUTIVE SUMMARY â”€â”€ -->
        {% if executive_summary %}
        <div class="exec-summary">
            <div class="exec-label">Key Strategic Insights</div>
            <div class="exec-text">
                {% for line in executive_summary.strip().split('\n') %}
                {% if line.strip() %}
                <p>{{ line.strip() | md_inline }}</p>
                {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <!-- â”€â”€ QUADRANT MATRIX DECORATION â”€â”€ -->
        <div class="quadrant-wrapper">
            <div class="quadrant-matrix">
                <div class="q-cell q-fill"></div>
                <div class="q-cell"></div>
                <div class="q-cell"></div>
                <div class="q-cell q-fill"></div>
            </div>
            <div class="q-axis-x">IMPACT</div>
            <div class="q-axis-y">URGENCY</div>
        </div>

        <!-- â”€â”€ SECTION OVERVIEW DASHBOARD: Bar chart â”€â”€ -->
        {%- set ns_active = namespace(count=0) -%}
        {%- for sk in section_order -%}
            {%- if sk in briefs and briefs[sk] is iterable and briefs[sk] is not string and briefs[sk]|length > 0 -%}
                {%- set ns_active.count = ns_active.count + 1 -%}
            {%- endif -%}
        {%- endfor -%}

        {% if ns_active.count > 1 %}
        <div class="overview-dashboard">
            <div class="overview-title">Section Intelligence Distribution</div>
            <div class="overview-bars">
                {%- set ns_max = namespace(val=1) -%}
                {%- for sk in section_order -%}
                    {%- if sk in briefs and briefs[sk] is iterable and briefs[sk] is not string -%}
                        {%- if briefs[sk]|length > ns_max.val -%}
                            {%- set ns_max.val = briefs[sk]|length -%}
                        {%- endif -%}
                    {%- endif -%}
                {%- endfor -%}
                {% for sk in section_order %}
                {% if sk in briefs and briefs[sk] is iterable and briefs[sk] is not string and briefs[sk]|length > 0 %}
                {%- set smeta = section_configs.get(sk, {}) -%}
                {%- set scolor = smeta.color|default('#D04A02') -%}
                {%- set scount = briefs[sk]|length -%}
                {%- set bar_pct = (scount * 100 / ns_max.val)|round|int -%}
                <div class="overview-bar-group">
                    <div class="overview-bar-val">{{ scount }}</div>
                    <div class="overview-bar-track">
                        <div class="overview-bar-fill" style="height: {{ bar_pct }}%; background: {{ scolor }};"></div>
                    </div>
                    <div class="overview-bar-label">{{ smeta.title|default(sk|title) }}</div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <!-- ====== SECTIONS ====== -->
        {%- set ns_sec = namespace(idx=0) -%}
        {% for section_key in section_order %}
        {% if section_key in briefs and briefs[section_key] is iterable and briefs[section_key] is not string and briefs[section_key]|length > 0 %}
        {%- set ns_sec.idx = ns_sec.idx + 1 -%}
        {%- set meta = section_configs.get(section_key, {}) -%}
        {%- set section_color = meta.color|default('#D04A02') -%}
        {%- set items = briefs[section_key] -%}
        {%- set sec_stats = stats.get('sections', {}).get(section_key, {}) if stats else {} -%}

        <section class="intel-section">
            <!-- Section header -->
            <div class="section-head">
                <div class="sec-num" style="border-color: {{ section_color }}; color: {{ section_color }};">
                    {{ '%02d' | format(ns_sec.idx) }}
                </div>
                <div class="sec-info">
                    <h2 class="sec-title">{{ meta.title|default(section_key|title) }}</h2>
                    <div class="sec-count">{{ items|length }} item{{ 's' if items|length != 1 else '' }} analyzed</div>
                    <div class="sec-color-strip" style="background: linear-gradient(90deg, {{ section_color }}, transparent); width: {{ [items|length * 22, 200]|min }}px;"></div>
                </div>
                <!-- Mini bar chart visualization -->
                <div class="sec-bar-chart">
                    {% for item in items %}
                    {%- set bh = 36 if item.priority|default('ðŸŸ¢') == 'ðŸ”´' else (24 if item.priority|default('ðŸŸ¢') == 'ðŸŸ¡' else 10) -%}
                    <div class="bar-col" style="height: {{ bh }}px; background: {{ section_color }};{% if item.priority|default('ðŸŸ¢') != 'ðŸ”´' %} opacity: {{ 0.55 if item.priority|default('ðŸŸ¢') == 'ðŸŸ¡' else 0.22 }};{% endif %}"></div>
                    {% endfor %}
                </div>
            </div>

            <!-- Funnel stats row -->
            {% if sec_stats %}
            <div class="sec-stats-row">
                <span class="sec-stat-label">Sources</span>
                <span class="sec-stat-val">{{ sec_stats.get('input', 'â€”') }}</span>
                <span class="sec-stat-arrow">â†’</span>
                <span class="sec-stat-label">Ranked</span>
                <span class="sec-stat-val">{{ sec_stats.get('after_fine_rank', 'â€”') }}</span>
                <span class="sec-stat-arrow">â†’</span>
                <span class="sec-stat-label">Output</span>
                <span class="sec-stat-val" style="color: {{ section_color }};">{{ sec_stats.get('output', 'â€”') }}</span>
            </div>
            {% endif %}

            <!-- Brief items -->
            {% for item in items %}
            {%- set priority = item.priority|default('ðŸŸ¢') -%}
            {%- set p_cls = 'p-critical' if priority == 'ðŸ”´' else ('p-high' if priority == 'ðŸŸ¡' else 'p-normal') -%}
            <div class="brief-item {{ p_cls }}">
                {% if priority == 'ðŸ”´' %}
                <div class="priority-badge badge-critical">â–² Critical Insight</div>
                {% elif priority == 'ðŸŸ¡' %}
                <div class="priority-badge badge-high">â—† High Priority</div>
                {% endif %}

                <h3 class="brief-headline">
                    <a href="{{ item.url|default('#') }}" target="_blank" rel="noopener">{{ item.headline|default('Untitled') }}</a>
                </h3>

                <div class="brief-meta-line">
                    {% if item.source %}
                    <span class="meta-source">{{ item.source }}</span>
                    {% endif %}
                    {% if item.tags %}
                    <span class="meta-sep">Â·</span>
                    {% for tag in item.tags %}
                    <span class="meta-tag">{{ tag }}{% if not loop.last %} Â·{% endif %}</span>
                    {% endfor %}
                    {% endif %}
                </div>

                {% if item.detail %}
                <div class="brief-detail-text">{{ item.detail | md_inline }}</div>
                {% endif %}

                {% if priority == 'ðŸ”´' %}
                <div class="strat-implication">
                    <div class="strat-imp-label">Strategic Implication</div>
                    <div class="strat-imp-body">
                        This development warrants executive attention. Monitor for cascading impact across adjacent portfolios and recalibrate strategic positioning as the situation evolves.
                    </div>
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </section>

        {% if not loop.last %}
        {%- set next_has = namespace(found=false) -%}
        {%- for remaining_key in section_order[loop.index:] -%}
            {%- if remaining_key in briefs and briefs[remaining_key] is iterable and briefs[remaining_key] is not string and briefs[remaining_key]|length > 0 -%}
                {%- set next_has.found = true -%}
            {%- endif -%}
        {%- endfor -%}
        {% if next_has.found %}
        <div class="section-divider"></div>
        {% endif %}
        {% endif %}

        {% endif %}
        {% endfor %}

    </div>
    <!-- end .content-body -->

    <!-- ====== FOOTER: PwC-style ====== -->
    <footer class="pwc-footer">
        <div class="footer-tri"></div>
        <div class="footer-brand-name">Strategy& Intelligence</div>
        <div class="footer-tagline">Clarity in complexity</div>

        <div class="footer-contacts">
            <div class="footer-contact-item">
                <div class="footer-contact-key">Report Date</div>
                <div class="footer-contact-val">{{ date_str }}</div>
            </div>
            <div class="footer-contact-item">
                <div class="footer-contact-key">Total Insights</div>
                <div class="footer-contact-val">{{ total_items }} strategic items</div>
            </div>
            <div class="footer-contact-item">
                <div class="footer-contact-key">Sectors Covered</div>
                <div class="footer-contact-val">{{ briefs|length }} domains</div>
            </div>
            <div class="footer-contact-item">
                <div class="footer-contact-key">Prepared By</div>
                <div class="footer-contact-val">Newsloom AI</div>
            </div>
        </div>

        <div class="footer-gen-time">Generated {{ generated_time }} Â· Confidential</div>

        <div class="footer-disclaimer-text">
            This briefing is generated by Newsloom Intelligence and is intended for internal
            decision-support purposes only. All analysis is AI-assisted and should be independently
            verified before acting upon. The views expressed herein do not constitute professional
            advice or recommendations. Distribution beyond the intended recipient is prohibited.<br>
            Â© {{ date_str[:4] }} Strategy& Intelligence Â· Part of the Newsloom Platform Â· All rights reserved.
        </div>

        <div class="footer-bottom-bar">
            Strategy& Â· A Member of the PwC Network
        </div>
    </footer>

</div>
</body>
</html>
