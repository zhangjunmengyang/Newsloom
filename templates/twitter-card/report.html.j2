                <div class="pin-tag">üìå Pinned tweet</div>

                <div class="tw-row">
                    <div class="tw-ava">{{ priority }}</div>
                    <div class="tw-main">
                        <div class="tw-usr">
                            <span class="tw-name">{{ item.source|default('Anonymous') }}</span>
                            {% if p_class == 'must-read' %}
                            <span class="tw-check">‚úì</span>
                            {% endif %}
                            <span class="tw-handle">@{{ item.source|default('anon')|lower|replace(' ', '_')|replace('.', '_') }}</span>
                            <span class="tw-dot">¬∑</span>
                            <span class="tw-time">{{ generated_time }}</span>
                        </div>

                        {% if item.detail %}
                        <div class="tw-txt">
                            <p>{{ item.detail | md_inline }}</p>
                        </div>
                        {% endif %}

                        {# Link preview card with section color accent #}
                        <a href="{{ item.url|default('#') }}" target="_blank" class="tw-card">
                            <div class="tw-card-color" style="background:linear-gradient(90deg, {{ section_color }}, transparent);"></div>
                            <div class="tw-card-body">
                                <div class="tw-card-domain">üîó {{ item.source|default('newsloom.ai') }}</div>
                                <div class="tw-card-title">{{ item.headline }}</div>
                                {% if item.detail %}
                                <div class="tw-card-desc">{{ item.detail|truncate(120, true, '‚Ä¶') }}</div>
                                {% endif %}
                            </div>
                        </a>

                        {% if item.tags %}
                        <div class="tw-tags">
                            {% for tag in item.tags %}
                            <span class="tw-tag">{{ tag if tag.startswith('#') else '#' ~ tag }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}

                        <div class="tw-acts">
                            <div class="tw-act reply">
                                <span class="tw-act-icon">üí¨</span>
                                <span>{{ (counter.n * 3 + 2) }}</span>
                            </div>
                            <div class="tw-act repost">
                                <span class="tw-act-icon">üîÑ</span>
                                <span>{{ (counter.n * 7 + 5) }}</span>
                            </div>
                            <div class="tw-act like">
                                <span class="tw-act-icon">‚ù§Ô∏è</span>
                                <span>{{ (counter.n * 13 + 11) }}</span>
                            </div>
                            <div class="tw-act views">
                                <span class="tw-act-icon">üìä</span>
                                <span>{{ (counter.n * 89 + 100) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}

            {% endif %}
            {% endfor %}

        </main>

        <!-- ======================================================
